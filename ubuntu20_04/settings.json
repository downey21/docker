{
    "r.bracketedPaste": true,
    "r.rterm.linux": "/usr/local/bin/radian",
    "r.rterm.option": ["--r-binary=/usr/bin/R"],
    "r.rpath.linux": "/usr/bin/R",
    "r.lsp.diagnostics": false,
    "r.plot.useHttpgd": false,
    "r.sessionWatcher": false,
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "terminal.integrated.fontFamily": "monospace",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "eq-material-theme-icons",
    "explorer.confirmDelete": false,
    "notebook.cellToolbarLocation": {
        "default": "right"
    },
    "terminal.integrated.fontSize": 13,
    "workbench.colorCustomizations": {
        "terminal.background": "#0d101c",
        "terminal.foreground": "#21b568",
        "terminal.ansiBlack": "#003541",
        "terminal.ansiBlue": "#268bd2",
        "terminal.ansiCyan": "#2aa198",
        "terminal.ansiGreen": "#02be02",
        "terminal.ansiMagenta": "#d33682",
        "terminal.ansiRed": "#dc322f",
        "terminal.ansiWhite": "#eee8d5",
        "terminal.ansiYellow": "#b58901",
        "terminal.ansiBrightBlack": "#586e75",
        "terminal.ansiBrightBlue": "#839496",
        "terminal.ansiBrightCyan": "#56b1b1",
        "terminal.ansiBrightGreen": "#586e75",
        "terminal.ansiBrightMagenta": "#6c6ec6",
        "terminal.ansiBrightRed": "#ff3a00",
        "terminal.ansiBrightWhite": "#fdf6e3",
        "terminal.ansiBrightYellow": "#657b83",
        "terminalCursor.background": "#003541",
        "terminalCursor.foreground": "#21b568",
        
        "editor.background": "#0d101c",
        "editorCursor.foreground": "#ffc900",
        "editor.selectionBackground": "#ffc80068",
        "editor.selectionHighlightBackground": "#ffc80028",

        "titleBar.activeBackground": "#0d101c",
        "titleBar.inactiveBackground": "#0d101c",
        "titleBar.border": "#363a45",

        "tab.activeBackground": "#0d101c",
        "tab.inactiveBackground": "#21252b",
        "tab.border": "#363a45",
        "editorGroupHeader.tabsBackground": "#0d101c",
        "editorGroupHeader.border": "#363a45",
        "editorGroupHeader.tabsBorder": "#363a45",

        "activityBar.background": "#0d101c",
        "activityBar.border": "#363a45",

        "statusBar.background": "#0d101c",
        "statusBar.border": "#363a45",

        "sideBar.background": "#0d101c",
        "sideBar.border": "#363a45",
        "sideBarSectionHeader.background": "#21252b"
    },
    "materialTheme.accent": "Sky",
    "workbench.sideBar.location": "right",
    "macros": {  
        "pythonExecSelectionAndCursorDown": [
            "python.execSelectionInTerminal",
            "cursorDown"
        ],
        "jupyterExeSelThenCursorDown":[
            "jupyter.execSelectionInteractive",
            "cursorDown"
        ],
        "jupyterRunCellThenCursorDown":[
            "jupyter.runcurrentcelladvance",
            "cursorDown"
        ],
        "interactiveExe":[
            "interactive.execute",
            "cursorDown"
        ]
    },
    "editor.cursorBlinking": "solid",
    "editor.renderLineHighlight": "none",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.openSideBySideDirection": "down",
    "workbench.panel.defaultLocation": "right",
    "editor.minimap.enabled": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "python.terminal.launchArgs": [
        "-m",
        "IPython",
        "--no-autoindent"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.inheritEnv": false,
    "explorer.confirmDragAndDrop": false,
    "remote.autoForwardPortsSource": "hybrid",
    "remote.SSH.connectTimeout": 800000,
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::opts_knit$set(concordance = TRUE); knitr::knit('%DOCFILE_EXT%')"
            ],
            "env": {}
        },
        {
            "name": "pnw2tex",
            "command": "pweave",
            "args": [
                "-f",
                "tex",
                "%DOC_EXT%"
            ],
            "env": {}
        },
        {
            "name": "pnw2texminted",
            "command": "pweave",
            "args": [
                "-f",
                "texminted",
                "%DOC_EXT%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "bibtex",
            "tools": [
                "bibtex"
            ]
        },
        {
            "name": "biber",
            "tools": [
                "biber"
            ]
        },
        {
            "name": "xelatex * 2",
            "tools": [
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "pdflatex * 2",
            "tools": [
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex -> biber -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "xelatex -> bibtex -> xelatex * 2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> biber -> xelatex * 2",
            "tools": [
                "xelatex",
                "biber",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "rnw2tex",
            "tools": [
                "rnw2tex"
            ]
        },
        {
            "name": "pnw2tex",
            "tools": [
                "pnw2tex"
            ]
        },
        {
            "name": "pnw2texminted",
            "tools": [
                "pnw2texminted"
            ]
        }
    ],
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.latex.recipe.default": "lastUsed"
}